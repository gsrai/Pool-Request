<tr>
    <th rowspan="3">Position</th>
    <th rowspan="3">Name</th>
    <th rowspan="2" colspan="5">Games</th>
    <th rowspan="2" colspan="5">Frames</th>
    <th rowspan="3">Challenging</th>
    <th rowspan="3">Expiry</th>
</tr>
<tr></tr>
<tr>
    <th>Played</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>W/L</th>
    <th>Win %</th>
    <th>Played</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>W/L</th>
    <th>Win %</th>
</tr>
{{#each displayedPeople as |person|}}
    <tr class={{person.classNames}}>
        <td class="position">{{person.position}}</td>
        <td class="name">
            {{#link-to 'history' (query-params name=person.name)}}{{person.name}}{{/link-to}}
        </td>
        <td class="games played">{{person.games.played}}</td>
        <td class="games wins">{{person.games.wins}}</td>
        <td class="games losses">{{person.games.losses}}</td>
        <td class="games ratio winLoss">{{person.games.ratio.winLoss}}</td>
        <td class="games ratio winPercent">{{person.games.ratio.winPercent}}</td>
        <td class="frames played">{{person.frames.played}}</td>
        <td class="frames wins">{{person.frames.wins}}</td>
        <td class="frames losses">{{person.frames.losses}}</td>
        <td class="frames ratio winLoss">{{person.frames.ratio.winLoss}}</td>
        <td class="frames ratio winPercent">{{person.frames.ratio.winPercent}}</td>
        <td class="challenging">
            {{#link-to 'history' (query-params name=person.name)}}{{person.challenging}}{{/link-to}}
        </td>
        <td class="expiry">{{format-date person.expiry}}</td>
    </tr>
{{/each}}
