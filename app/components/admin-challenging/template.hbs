<form class="challenge-form" {{action "addChallenged" on="submit"}}>
    <fieldset>
        <label>
            Player 1:
            {{select-component
              class="player-one input"
              options=unchallengedPlayers
              selectOption="selectChallenger1"}}
        </label>
        <label>
            Player 2:
            {{select-component
              class="player-two input"
              options=unchallengedPlayers
              selectOption="selectChallenger2"}}
        </label>
    </fieldset>
    <input type="submit" value="submit" class="submit-button">
</form>
